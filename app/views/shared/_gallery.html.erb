<gallery-wrapper>
  <% if comment.present? %>
    <% comment.images.each do |image| %>
      <gallery-image data-controller="image">
        <%= cl_image_tag image.key,
          crop: "fill",
          class: 'gallery-image',
          data: { action: 'click->image#fullscreen' }
        %>
        <% if allowed_to?(:edit?, comment) %>
          <%= link_to 'supprimer', comment_path(comment, params: { attachment_id: image.id, cloudinary_key: image.key }),
            data: { turbo_method: :delete, turbo_frame: 'comments' }
          %>
        <% end %>
      </gallery-image>
    <% end %>
  <% end %>
<gallery-wrapper>
