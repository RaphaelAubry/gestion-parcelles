<account-status>
  <% unless user_signed_in? %>
    <%= link_to "connexion", new_user_session_path %>
  <% end %>
</account-status>
<li-dropdown>
  <%= render partial: 'shared/avatar', locals: { user: current_user, width: '50px' } %>
  <account-connexion data-controller='connexion'
                     data-connexion-status-value='<%= user_signed_in? %>'
                     data-connexion-target='circle'
  >
  </account-connexion>
    <ul>
      <%= link_to 'mon compte', edit_user_registration_path(current_user), data: { navbar_target: 'link'} %>
      <% if user_signed_in? %>
        <%= link_to 'mes invitations envoyées', invitations_path(users: :guests), data: { navbar_target: 'link'} %>
        <%= link_to 'mes invitations reçues', invitations_path(users: :owners), data: { navbar_target: 'link'} %>
        <%= link_to "déconnexion", destroy_user_session_path, data: { turbo_method: :delete } %>
      <% end %>
    </ul>
</li-dropdown>
