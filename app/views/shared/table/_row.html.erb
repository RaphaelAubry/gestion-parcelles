<% columns.each do |column_name| %>
  <td  data-table-target='row'
       data-action='click->table#linkTo'
  >
    <%= instance.send column_name %>
  </td>
<% end %>
<% if allowed_to?(:edit?, instance, with: ((controller.to_s.classify + 'Policy').constantize)) %>
  <td><%= link_to '', send("edit_#{controller.to_s.singularize}_path", instance),
                          class: 'fas fa-pen'
      %>
  </td>
<% end %>
<% if allowed_to?(:destroy?, instance, with: ((controller.to_s.classify + 'Policy').constantize)) %>
  <td><%= link_to '', send("#{controller.to_s.singularize}_path", instance),
                          data: { turbo_method: :delete, turbo_confirm: 'Etes-vous sÃ»r ?'},
                          class: "fas fa-trash"
      %>
  </td>
<% end %>
