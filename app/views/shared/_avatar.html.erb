<% if user %>
  <% if user.avatar.attached? %>
    <%= cl_image_tag user.avatar.key, transformation: [{ height: 45, width: 45, crop: 'thumb', gravity: 'face'}], class: 'avatar' %>
  <% else %>
    <%= image_tag 'user.png', width: width %>
  <% end %>
<% else %>
  <%= image_tag 'user.png', width: width %>
<% end %>
