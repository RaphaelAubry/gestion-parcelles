<%= form_for @supplier do |form| %>
  <%= render "shared/error_messages", resource: @supplier %>
  <input-group data-controller='input-group'>
    <%= form.label :name,
      data: { input_group_target: 'label' }
    %>
    <%= form.text_field :name,
      data: { input_group_target: 'input',
              action: 'focus->input-group#focusLabel
                       focusout->input-group#focusoutLabel
                       change->input-group#focusLabel'
            }
    %>
  </input-group>

  <input-group data-controller='input-group'>
    <%= form.label :phone,
      data: { input_group_target: 'label' }
    %>
    <%= form.text_field :phone,
      data: { input_group_target: 'input',
              action: 'focus->input-group#focusLabel
                       focusout->input-group#focusoutLabel
                       change->input-group#focusLabel'
            }
    %>
  </input-group>

    <input-group data-controller='input-group'>
    <%= form.label :email,
      data: { input_group_target: 'label' }
    %>
    <%= form.text_field :email,
      data: { input_group_target: 'input',
              action: 'focus->input-group#focusLabel
                       focusout->input-group#focusoutLabel
                       change->input-group#focusLabel'
            }
    %>
  </input-group>


  <submit-group>
    <%= form.submit 'valider', class: 'button' %>
    <%= link_to :annuler, :back %>
  </submit-group>
<% end %>
