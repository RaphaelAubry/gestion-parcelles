<tr>
  <% (Parcelle::INSTANCE_VARIABLES - [:polygon]).each do |column_name| %>
  <th id='<%= column_name %>' scope='col'>
    <%= column_name.to_s.humanize %>
  </th>
  <% end %>
</th>
<tr>
  <% (Parcelle::INSTANCE_VARIABLES - [:polygon]).each do |column_name| %>
  <td>
    <table-tool>
      <%= link_to '', parcelles_path(sort: { column_name => :asc }), class: 'fas fa-arrow-down' %>
      <%= link_to '', parcelles_path(sort: { column_name => :desc }), class: 'fas fa-arrow-up' %>
      <%= form_with url: "/parcelles", method: :get, scope: :filter, data: { controller: 'form-filter' } do |form| %>
        <%= form.select(column_name, @parcelles.pluck(column_name).uniq, {include_blank: 'filtrer', selected: 'filtrer'}, { data: {  form_filter_target: 'dropdown', action: 'change->form-filter#submit' } }) %>
      <%= link_to '', parcelles_path(), data: { form_filter_target: 'link' }, hidden: true %><% end %>
    </table-tool>

  </td>
  <% end %>
</tr>
