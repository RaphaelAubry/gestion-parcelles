<h1>Parcelles</h1>
<% unless @parcelles.length.zero? %>
  <table>
    <thead>
      <tr>
        <% Parcelle::INSTANCE_VARIABLES.each do |variable| %>
          <td><%= variable.to_s.humanize %></td>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @parcelles.each do |parcelle| %>
        <% if parcelle %>

        <tr>
          <td>
            <%= link_to parcelle_path(parcelle) do %>
            <%= parcelle.reference_cadastrale %>
            <% end%>
          </td>
          <td><%= parcelle.lieu_dit %></td>
          <td><%= parcelle.code_officiel_geographique %></td>
          <td><%= parcelle.surface %></td>
          <td><%= parcelle.annee_plantation %></td>
          <td><%= parcelle.distance_rang %></td>
          <td><%= parcelle.distance_pieds %></td>
          <td><%= link_to :modifier, edit_parcelle_path(parcelle) %></td>
          <td><%= link_to :supprimer, parcelle_path(parcelle), data: { turbo_method: :delete, turbo_confirm: 'Etes-vous sÃ»r ?'} %></td>
      </tr>

        <% end %>
      <% end %>
