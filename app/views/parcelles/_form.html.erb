<%= form_for @parcelle do |form| %>
  <%= render "shared/error_messages", resource: @parcelle %>
  <input-group data-controller='input-group'>
    <%= form.label :reference_cadastrale,
      data: { input_group_target: 'label' }
    %>
    <%= form.text_field :reference_cadastrale,
      data: { input_group_target: 'input',
              action: 'focus->input-group#focusLabel
                       focusout->input-group#focusoutLabel
                       change->input-group#focusLabel'
            }
    %>
  </input-group>

  <input-group data-controller='input-group'>
    <%= form.label :lieu_dit,
      data: { input_group_target: 'label' }
    %>
    <%= form.text_field :lieu_dit,
      data: { input_group_target: 'input',
              action: 'focus->input-group#focusLabel
                       focusout->input-group#focusoutLabel
                       change->input-group#focusLabel'
            }
    %>
  </input-group>

  <input-group data-controller='input-group'>
    <%= form.label :code_officiel_geographique,
      data: { input_group_target: 'label' }
    %>
    <%= form.text_field :code_officiel_geographique,
      data: { input_group_target: 'input',
              action: 'focus->input-group#focusLabel
                      focusout->input-group#focusoutLabel
                      change->input-group#focusLabel'
            }
    %>
  </input-group>

  <input-group data-controller='input-group'>
    <%= form.label :surface,
      data: { input_group_target: 'label' }
    %>
    <%= form.text_field :surface,
      data: { input_group_target: 'input',
              action: 'focus->input-group#focusLabel
                    focusout->input-group#focusoutLabel
                    change->input-group#focusLabel'
            }
    %>
  </input-group>

  <select-group>
    <%= form.label :annee_plantation %>
    <%= form.select :annee_plantation, (Time.zone.now.year - 100)..(Time.zone.now.year) %>
  </select-group>

  <input-group data-controller='input-group'>
  <%= form.label :distance_rang,
    data: { input_group_target: 'label' }
  %>
  <%= form.text_field :distance_rang,
    data: { input_group_target: 'input',
        action: 'focus->input-group#focusLabel
                focusout->input-group#focusoutLabel
                change->input-group#focusLabel'
          }
  %>
  </input-group>

  <input-group data-controller='input-group'>
    <%= form.label :distance_pieds,
      data: { input_group_target: 'label' } %>
    <%= form.text_field :distance_pieds,
      data: { input_group_target: 'input',
              action: 'focus->input-group#focusLabel
                    focusout->input-group#focusoutLabel
                    change->input-group#focusLabel'
            }
    %>
  </input-group>

  <select-group>
    <%= form.label 'Marqueur', data: { input_group_target: 'label' }, class: 'move' %>
    <%= form.select(:tag_id, current_user.tags.collect { |t| [t.name, t.id] }.uniq,
      { include_blank: 'sans marqueur' }) %>
  </select-group>

  <submit-group>
    <%= form.submit 'valider', class: 'button' %>
    <%= link_to :annuler, :back %>
  </submit-group>
<% end %>
